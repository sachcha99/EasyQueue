<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sheddetails"
    android:clipToOutline="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/txt_dialogDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:padding="15dp"
            android:text="Plese Confirm Did You Pump Fuel Before Exit !"
            android:textAlignment="center"
            android:textColor="#706E6E"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/pumpExitCapacity"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="Enter pump fuel capacity"
            android:inputType="textPersonName"
            android:paddingStart="10dp" />

        <Button
            android:id="@+id/btn_confirmwithfuel"
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_confirm_btn"
            android:gravity="center"
            android:text="EXIT WITH FUEL"
            android:textAllCaps="false"
            android:textColor="#CFCECE"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_cancelwithoutfuel"
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/custom_cancel_btn"
            android:gravity="center"
            android:text="EXIT WITHOUT  FUEL"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>