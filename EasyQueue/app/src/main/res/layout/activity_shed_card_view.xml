<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    tools:context=".ShedController.ShedViewCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/shape2"
        android:orientation="horizontal"
        android:padding="15dp"
        android:text="View Shed List"
        app:cornerRadius="8dp"
        app:iconPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center_vertical|clip_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_shedName"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/cabin"
                    android:text="Pinidiya Shed"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_shedStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left|center_vertical"
                    android:text="Available "
                    android:layout_alignParentRight="true"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_statusDotGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_baseline_bullet"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:paddingTop="3dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txt_statusDotRed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_baseline_bulletred"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:paddingTop="3dp"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_shedAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/cabin"
                    android:gravity="center_vertical"
                    android:text="Matara Hakmana RD."
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cabin"
                android:text="Fuel Details"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_ppp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_baseline_bulletblack"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/cabin"
                    android:gravity="center_vertical"
                    android:text="Petrol - "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_petrolStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/cabin"
                    android:gravity="center_vertical"
                    android:text="Not Available"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/ddd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_baseline_bulletblack"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/cabin"
                    android:gravity="center_vertical"
                    android:text="Diesel - "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_dieselStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/cabin"
                    android:gravity="center_vertical"
                    android:text="Not Available"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>